<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ana.volunteerwork.CadastroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Cadastrar"
            android:textAlignment="center"



            android:textColor="#00c9da"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:text="teste"
            android:textAlignment="viewStart"
            android:textColor="#00c9da"
            android:textColorHint="#00c9da" />

        <TextView
            android:id="@+id/titulo7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"

            android:textColor="#00c9da"
            android:textSize="2sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:text="tes@tes.com"
            android:textColor="#00c9da"
            android:textColorHint="#00c9da" />


        <TextView
            android:id="@+id/titulo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"

            android:textColor="#00c9da"
            android:textSize="2sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:padding="6dp"
            android:text="33"
            android:textColor="#00c9da"
            android:textColorHint="#00c9da" />



        <TextView
            android:id="@+id/titulo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"

            android:textColor="#00c9da"
            android:textSize="2sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="6dp"
            android:text="123456"
            android:textColor="#00c9da"
            android:textColorHint="#00c9da" />

        <TextView
            android:id="@+id/titulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"

            android:textColor="#00c9da"
            android:textSize="2sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/cadastrar"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Cadastrar" />

    </LinearLayout>

</ScrollView>